<div id="layoutSidenav_content">
    <main class="">
        <div class="container-fluid px-4">
            <!--Titulo de Sección-->
            <h1 class="mt-4">Pedidos</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Tienda Las Nubes</li>
            </ol>

            <!--Tabla de Pedidos-->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Base de Datos
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>ID Pedido</th>
                                <th>ID Cliente</th>
                                <th>Fecha de Creación</th>
                                <th>Monto Total</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID Pedido</th>
                                <th>ID Cliente</th>
                                <th>Fecha de Creación</th>
                                <th>Monto Total</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>
                        <tbody id="filasPedidos">
                            <% for(var pedido = 0; pedido < pedidoTienda.length; pedido++) { %>
                                <tr>
                                    <td class="align-middle"><%= pedidoTienda[pedido].idPedido %></td>
                                    <td class="align-middle"><%= pedidoTienda[pedido].idCliente %></td>
                                    <td class="align-middle"><%= pedidoTienda[pedido].fecha %></td>
                                    <td class="align-middle text-center">S/. <%= pedidoTienda[pedido].monto %>.00</td>
                                    <% if(pedidoTienda[pedido].estado == "Pendiente"){ %>
                                        <td class="align-middle text-center">
                                            <div class="badge bg-warning rounded-pill"><%= pedidoTienda[pedido].estado %><div>
                                        </td>
                                    <% } else{ %>  
                                        <td class="align-middle text-center">
                                            <div class="badge bg-success rounded-pill"><%= pedidoTienda[pedido].estado %><div>
                                        </td>
                                    <% } %>
                                    <td class="align-middle text-center">
                                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalEditar" id="idbutton<%= pedidoTienda[pedido].idPedido %>" idPedido="<%= pedidoTienda[pedido].idPedido %>">Editar Estado</button>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!--Modal Editar Pedido -->
            <div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Editar Pedido</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Estado del Pedido</label>
                                    <select class="form-select" aria-label="Default select example" id="inputEstado">
                                        <option value="Pendiente">Pendiente</option>
                                        <option value="Completado">Completado</option>
                                    </select>
                                </div>
                            </form>
        
                            <div class="d-grid gap-2 mt-2">
                                <button class="btn btn-primary" role="button" id="butActualizar">Actualizar Pedido</button>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>

        </div> 
    </main>

    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Universidad de Lima 2021</div>
                <div>
                    <a href="#">Privacy Policy</a>
                    &middot;
                    <a href="#">Terms &amp; Conditions</a>
                </div>
            </div>
        </div>
    </footer>
</div>

<script src="../../../js/pedidos_admin.js"></script>